<%= javascript_include_tag "application.js" %>

<div id="main_container">
	<h1>Endangered Species Analysis tool</h1>
	<label>What species do you want to analyse?</label>
	
	<form>
		<input id="inputSearch" type="text" value="Start typing your desired taxon..." 
		onfocus="if(!this._haschanged){this.value=''};this._haschanged=true;"/>
	</form>
		
	<%= form_for Rla.new, :html => { :class => "upload", :multipart => true } do |r| %>
		<p>or continue working in a previous report</p>

		<!-- To show the rollover effect over the button -->
		<a id="upload_button"></a>

		<%= r.file_field :name %>	
		
	<% end %>
	
</div>
